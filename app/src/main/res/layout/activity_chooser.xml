<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="?android:attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/chooser_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/chooser_select_a_method_header"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/chooser_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="@string/ggrc_signin_description"
            android:textSize="18sp" />

        <Button
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:elevation="10sp"
            android:background="@drawable/google_button_style"
            android:drawableStart="@drawable/googleg_standard_color_18"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/fui_sign_in_with_google"
            android:textAppearance="@style/SignInButtonText"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <Button
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:elevation="10sp"
            android:background="@drawable/email_button_style"
            android:drawableStart="@drawable/ic_email_24dp"
            android:drawableTint="@color/white"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/fui_sign_in_with_email"
            android:textAppearance="@style/SignInButtonText"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:elevation="10sp"
            android:background="@drawable/fb_button_style"
            android:drawableStart="@drawable/ic_facebook_24dp"
            android:drawableTint="@color/white"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/fui_sign_in_with_facebook"
            android:textAppearance="@style/SignInButtonText"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
