<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/business_item_card">

        <RelativeLayout
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/business_item_card"
            android:padding="8dp">

            <ImageView
                android:id="@+id/photoCell"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_margin="10dp"
                android:contentDescription="Business Image"
                android:src="@drawable/googleg_standard_color_18" />

            <TextView
                android:id="@+id/bizName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/photoCell"
                android:gravity="bottom"
                android:text="Corner Bakery and Cafe"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewShortDesc"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@id/bizName"
                android:layout_below="@id/bizName"
                android:paddingBottom="5dp"
                android:text="Take out, dine in, desserts, drinks"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textViewAddress"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@id/textViewShortDesc"
                android:layout_below="@id/textViewShortDesc"
                android:background="@color/redAccent"
                android:gravity="center_vertical"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="123 Old York Rd, Abington PA"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textViewAddress"
                android:layout_below="@+id/textViewAddress"
                android:layout_alignBottom="@id/photoCell"
                android:maxLines="1"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="http://www.cornerbakeryabington.com"
                android:textColor="@color/white"
                android:textSize="12sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>