<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="50sp"
    android:orientation="vertical"
    tools:context=".GoogleSignIn"
    tools:showIn="@layout/activity_google_sign_in">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/userPhoto"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/status_txtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"

            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Hello, Name Here!"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/userEmailTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="emailaddress@gmail.com"
            android:textSize="25sp" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="20sp">

        </com.google.android.gms.common.SignInButton>

        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="23sp"
            android:layout_marginStart="23sp"
            android:background="@color/lightGrey"
            android:fontFamily="sans-serif"
            android:text="Sign Out"
            android:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>
