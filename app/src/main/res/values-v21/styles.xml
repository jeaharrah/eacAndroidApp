<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryDark">@color/mediumGreen</item>
        <item name="colorAccent">@color/redAccent</item>
        <!--Attributes of action bar-->
        <item name="android:fontFamily">serif</item>
        <item name="android:actionBarStyle">@color/darkGreen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--<item name="android:statusBarColor">@color/colorAccentPink</item>-->
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryDark">@color/mediumGreen</item>
        <item name="colorAccent">@color/blueAccent</item>

        <!--Attributes of action bar-->
        <item name="android:fontFamily">serif</item>
        <item name="android:actionBarStyle">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
