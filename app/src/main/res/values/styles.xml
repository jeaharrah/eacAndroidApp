<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryDark">@color/mediumGreen</item>
        <item name="colorAccent">@color/redAccent</item>

        <!--Attributes of action bar-->
        <item name="android:fontFamily">casual</item>
        <item name="android:actionBarStyle">@color/darkGreen</item>

        <!--Drawable attributes-->
        <!--Attribute for right-hand overflow icon (vertical line of three dots)-->
        <!--<item name="android:actionOverflowButtonStyle">@style/OverFlow</item>-->
        <!--Attribute for left-hand burger icon-->
        <!--<item name="android:homeAsUpIndicator">@drawable/ic_menu_white_24dp</item>-->

        <!--Ensuring that the theme has an action bar and title-->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

    </style>

    <!--<style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">-->
    <!--<item name="android:src">@drawable/ic_overflow_white_24dp</item>-->
    <!--</style>-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryDark">@color/mediumGreen</item>
        <item name="colorAccent">@color/redAccent</item>

        <!--Attributes of action bar-->
        <item name="android:fontFamily">casual</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
