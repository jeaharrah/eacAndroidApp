<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryDark">@color/mediumGreen</item>
        <item name="colorAccent">@color/redAccent</item>

        <!--Attributes of action bar-->
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:actionBarStyle">@color/darkGreen</item>
        <item name="android:textAppearanceListItem">@style/DrawerItemNameTextStyle</item>

        <!--Ensuring that the theme has an action bar and title-->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryDark">@color/mediumGreen</item>
        <item name="colorAccent">@color/blueAccent</item>

        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTabLayoutTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DrawerItemNameTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="DrawerCaptionTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="SignInButtonText">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="FirebaseUI.Button.AccountChooser.GoogleButton">
        <item name="drawableStartCompat">@drawable/fui_ic_googleg_color_24dp</item>
        <item name="android:background">@drawable/fui_idp_button_background_google</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="FirebaseUI.Button.AccountChooser.FacebookButton">
        <item name="drawableStartCompat">@drawable/fui_ic_facebook_white_22dp</item>
        <item name="android:background">@drawable/fui_idp_button_background_facebook</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="FirebaseUI.Button.AccountChooser.EmailButton">
        <item name="drawableStartCompat">@drawable/fui_ic_mail_white_24dp</item>
        <item name="android:background">@drawable/fui_idp_button_background_email</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
